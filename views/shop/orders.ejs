    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
                <% if(orders.length > 0) {%>
                    <ul>
                            <% orders.forEach(order => { %>
                                <li>
                                    <h3> #<%=order._id%></h3>
                                    <ul>
                                        <% order.product.forEach(p => { %>  
                                            <li>
                                                <%=p.product.title%>  (<%=p.quantity%>)</p>
                                            </li>
                                        <% });%>
                                    </ul>
                                </li>
                            <%})%>
                        </ul>
                <%} else {%>    
                    <h1>Nothing there!</h1>
                <%}%>
        </main>
        <%- include('../includes/end.ejs') %>